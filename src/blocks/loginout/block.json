{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "lsx/loginout",
	"title": "LSX Login/out",
	"category": "theme",
	"description": "Show a login form & logout link.",
	"keywords": [ "login", "logout", "form", "lsx" ],
	"textdomain": "lsx-login",
	"attributes": {
		"displayLoginAsForm": {
			"type": "boolean",
			"default": true
		},
		"redirectToCurrent": {
			"type": "boolean",
			"default": true
		}
	},
	"supports": {
		"className": true,
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalFontWeight": true,
			"__experimentalFontStyle": true,
			"__experimentalTextTransform": true,
			"__experimentalTextDecoration": true,
			"__experimentalLetterSpacing": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		}
	}
}
